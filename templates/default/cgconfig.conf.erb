mount {
  cpuset  = /cgroup/cpuset;
  cpu     = /cgroup/cpu;
  cpuacct = /cgroup/cpuacct;
  memory  = /cgroup/memory;
  devices = /cgroup/devices;
  freezer = /cgroup/freezer;
  net_cls = /cgroup/net_cls;
  blkio   = /cgroup/blkio;
}

group limittest {
  cpu {
    cpu.cfs_quota_us  = <%= node["cgroup"]["cpu"]["_CFS_QUOTA_US"]%>;
    cpu.cfs_period_us = <%= node["cgroup"]["cpu"]["_CFS_PERIOD_US"]%>;
  }
  cpuacct {
  }
}
